{
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [ "es6", "dom" ],
      "moduleResolution": "node",    
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es6",    
      "typeRoots": [
        "node_modules/@types"      
      ]    
    },
    "exclude": [
      "node_modules/*"
    ]
  }